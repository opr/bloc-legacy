{
  "name": "Bloc",
  "version": "1.0.0",
  "description": "A responsive CSS Framework.",
  "main": "index.js",
  "scripts": {
    "sass:compile": "node-sass --importer node_modules/node-sass-glob-importer/dist/cli.js -o assets/styles/css assets/styles/scss/bloc.min.scss",
    "sass:lint": "sass-lint --config \"./.sass-lint.yml\" -v --no-exit",
    "browser-sync": "browser-sync start -c bs-config.js",
    "webserver": "http-server",
    "watch": "npm-watch sass:lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "watch": {
    "sass:lint": {
      "patterns": ["./assets/styles/scss/**/*.scss"]
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^2.23.6",
    "chai": "^4.1.2",
    "chai-immutable": "^1.6.0",
    "http-server": "^0.11.1",
    "immutable": "^3.8.2",
    "mocha": "^5.0.0",
    "node-sass": "^4.7.2",
    "node-sass-glob-importer": "^5.1.0",
    "npm-watch": "^0.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "sass-lint": "^1.12.1",
    "webpack": "^3.10.0"
  }
}
